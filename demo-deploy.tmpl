#
# mongo
#

apiVersion: apps/v1
kind: Deployment
metadata:
  name: mongo
spec:
  replicas: 1
  selector:
    matchLabels:
      service: mongo
  minReadySeconds: 20
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 0
      maxSurge: 1
  template:
    metadata:
      name: mongo
      labels:
        service: mongo
    spec:
      containers:
      - name: mongo
        image: mongo
        ports:
        - containerPort: 27017

---

apiVersion: v1
kind: Service
metadata:
  name: mongo
spec:
  type: ClusterIP
  ports:
  - port: 27017
    targetPort: 27017
    protocol: TCP
  selector:
    service: mongo

---


#
# mark-server
#

apiVersion: apps/v1
kind: Deployment
metadata:
  name: mark-server
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mark-server
  minReadySeconds: 30
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 0
      maxSurge: 1
  template:
    metadata:
      labels:
        app: mark-server
    spec:
      containers:
      - name: mark-server
        image: $CI_REGISTRY_IMAGE:$CI_COMMIT_SHORT_SHA
        ports:
        - containerPort: 8080
        env:
        - name: MARK_MONGO_HOST
          value: mongo
        - name: _JAVA_OPTIONS
          value: "-Xms2G -Xmx3G"
        resources:
          limits:
            memory: "4000Mi"
          requests:
            memory: "4000Mi"

---

apiVersion: v1
kind: Service
metadata:
  name: mark-server
spec:
  type: ClusterIP
  ports:
  - port: 8080
    targetPort: 8080
    protocol: TCP
  selector:
    app: mark-server

---

#
# mark-web
# 

apiVersion: apps/v1
kind: Deployment
metadata:
  name: mark-web
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mark-web
  minReadySeconds: 20
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 0
      maxSurge: 1
  template:
    metadata:
      labels:
        app: mark-web
    spec:
      containers:
      - name: mark-web
        image: cylab/mark-web:1.4.4
        ports:
        - containerPort: 80
        env:
        - name: MARK_HOST
          value: mark-server
        - name: MARK_PORT
          value: "8080"
        - name: APP_DEBUG
          value: false
        - name: APP_URL
          value: https://mark.kube.cylab.be

---

apiVersion: v1
kind: Service
metadata:
  name: mark-web
spec:
  type: NodePort
  ports:
  - port: 80
    nodePort: 30001
    protocol: TCP
  selector:
    app: mark-web

